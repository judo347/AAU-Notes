<?xml version="1.0" ?>
<argos-configuration>
	<framework>
	<system threads="2" method="balance_quantity" />
	<experiment length="0"
				ticks_per_second="10"
				random_seed="1" />
	<profiling 	file="profile.txt"
				format = "human_readable"
				truncate_file="true" />
	</framework>
	<controllers>
		<KBot_controller 	id="kbc"
							library="build/controllers/kbot/libkbot">
			<actuators>
				<differential_steering implementation="default" />
			</actuators>
			<sensors>
				<footbot_proximity implementation="default" show_rays="true" />
			</sensors>
			<params alpha="7.5" delta="0.1" velocity="5" />
		</KBot_controller>
		<Alibot_controller 	id="abc"
							library="build/controllers/alibot/libalibot">
			<actuators>
				<differential_steering implementation="default" />
			</actuators>
			<sensors>
				<footbot_proximity implementation="default" show_rays="true" />
				<positioning implementation="default" />
			</sensors>
			<params alpha="7.5" delta="0.1" velocity="5" />
		</Alibot_controller>
	</controllers>
	<loop_functions library="build/loop_functions/communicator_loop_functions/libcommunicator_loop_functions"
					label="communicator_loop_functions">
	</loop_functions>
	<arena size="10, 10, 1" center="0,0,0.5">
	  <box id="wall_north" size="10, 0.1,0.5" movable="false">
		<body position="0,5,0" orientation="0,0,0" />
	  </box>
	  <box id="wall_south" size="10, 0.1, 0.5" movable="false">
		<body position="0,-5,0" orientation="0,0,0" />
	  </box>
	  <box id="wall_east" size="0.1,10,0.5" movable="false">
		<body position="5,0,0" orientation="0,0,0" />
	  </box>
	  <box id="wall_west" size="0.1,10,0.5" movable="false">
		<body position="-5,0,0" orientation="0,0,0" />
	  </box>
	  
	  <!-- Place the bot and bind it to the controller -->
	  <foot-bot id="fb_0">
		<body position="0,0,0" orientation="1,0,0" />
		<controller config="abc" />
	  </foot-bot>
	  <foot-bot id="fb_1">
		<body position="0,0,0" orientation="1,0,0" />
		<controller config="abc" />
	  </foot-bot>
	  <foot-bot id="fb_2">
		<body position="0,0,0" orientation="1,0,0" />
		<controller config="abc" />
	  </foot-bot>
	</arena>
	<physics_engines>
		<!-- Use a 2D dynamics engine. -->
		<dynamics2d id="dyn2d" />
	</physics_engines>
	<media>
		<!-- Media is used for robot communication. -->
	</media>
	<visualization>
		<qt-opengl />
	</visualization>
	<!-- <loop_functions library="/path/to/libmy_loop_functions.so" label="my_loop_functions" /> -->
</argos-configuration>
